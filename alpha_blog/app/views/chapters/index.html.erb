<h1>Chapters listing page</h1>

<table>
  <thead>
    <tr>
      <th>Chapter Number</th>
      <th>Title</th>
      <th>Starts At</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>
  
  <tbody>
    <% @chapters.each do |chapter| %>
      <tr>
        <td><%= chapter.chapter_num %></td>
        <td><%= chapter.title %></td>
        <td><%= chapter.page_start_at %></td>
        <td><%= link_to 'Show', chapter_path(chapter) %></td>
        <td><%= link_to 'Edit', edit_chapter_path(chapter) %></td>
        <td><%= link_to 'Delete', chapter_path(chapter), method: :delete, data: { confirm: "Are you sure?" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<p><%= link_to 'Create new chapter', new_chapter_path %></p>