<h1 class="text-center mt-4">Listing all chapters</h1>

<div class="container">
  <% @chapters.each do |chapter| %>
    <div class="row justify-content-md-center">
      <div class="col-8 mt-4">
        <div class="card text-center shadow mb-5 bg-white rounded">
          <div class="card-header font-italic">
            Material <%= chapter.material.slides_filename if chapter.material %>
          </div>
          <div class="card-body">
            <p class="card-text">Chapter <%= chapter.chapter_num %></p>
            <h5 class="card-title"><%= link_to chapter.title, chapter_path(chapter), class: "text-success" %></h5>
            <p class="card-text">Slide <%= chapter.page_start_at %></p>
            <%= link_to 'View', chapter_path(chapter), class: "btn btn-outline-success" %>
            <%= link_to 'Edit', edit_chapter_path(chapter), class: "btn btn-outline-info" %>
            <%= link_to 'Delete', chapter_path(chapter), class: "btn btn-outline-danger", method: :delete, data: { confirm: "Are you sure?" } %></a>
          </div>
          <div class="card-footer text-muted">
            <small>Created at <%= time_ago_in_words(chapter.created_at) %> ago,
            edited <%= time_ago_in_words(chapter.updated_at) %> ago</small>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>

<p><%= link_to 'Create new chapter', new_chapter_path %></p>